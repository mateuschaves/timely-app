{
  "expo": {
    "name": "Timely",
    "slug": "timely-app",
    "version": "1.0.4",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.wazowsky.timelyapp",
      "scheme": "timely",
      "usesAppleSignIn": true,
      "deploymentTarget": "16.1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Precisamos da sua localização para registrar o ponto com precisão.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Precisamos da sua localização para detectar quando você chega ao trabalho e registrar o ponto automaticamente, mesmo com o app fechado.",
        "NSLocationAlwaysUsageDescription": "Precisamos da sua localização para detectar quando você chega ao trabalho e registrar o ponto automaticamente, mesmo com o app fechado.",
        "ITSAppUsesNonExemptEncryption": false,
        "NSSupportsLiveActivities": true,
        "UIBackgroundModes": [
          "location",
          "remote-notification"
        ]
      }
    },
    "plugins": [
      "expo-apple-authentication",
      "expo-localization",
      "sentry-expo",
      [
        "expo-updates",
        {
          "username": "mateuschaves"
        }
      ],
      "expo-web-browser",
      [
        "expo-live-activity",
        {
          "frequentUpdates": true,
          "modulePath": "./modules/expo-live-activity/index.ts"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Precisamos da sua localização para detectar quando você chega ao trabalho e registrar o ponto automaticamente, mesmo com o app fechado.",
          "locationAlwaysPermission": "Precisamos da sua localização para detectar quando você chega ao trabalho e registrar o ponto automaticamente, mesmo com o app fechado.",
          "locationWhenInUsePermission": "Precisamos da sua localização para registrar o ponto com precisão.",
          "isIosBackgroundLocationEnabled": true
        }
      ]
    ],
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/ea5bb2c2-37c7-4f85-9a32-e9f31de5e4cf"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.timelyapp",
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY"
        }
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "timely"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "timely",
    "extra": {
      "eas": {
        "projectId": "ea5bb2c2-37c7-4f85-9a32-e9f31de5e4cf"
      },
      "sentryDsn": ""
    }
  }
}